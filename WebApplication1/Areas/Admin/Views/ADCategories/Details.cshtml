@model WebApplication1.Models.Category

@{
    ViewData["Title"] = "Chi tiết Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center">Chi tiết Danh mục</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    Mã danh mục
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CatId)
                </dd>
                <dt class="col-sm-4">
                   Tên danh mục
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CatName)
                </dd>
            </dl>

            <div class="text-center mt-3">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.CatId">
                    <i class="fas fa-edit"></i> Sửa
                </a>
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
