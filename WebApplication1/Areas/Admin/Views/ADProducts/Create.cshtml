@model WebApplication1.Models.Product

@{
    ViewData["Title"] = "Tạo Sản Phẩm Mới";
}

<h4 class="text-center">Tạo Sản Phẩm Mới</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Thông Tin Sản Phẩm</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"><i class="fas fa-tag"></i> Tên Sản Phẩm</label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ShortDesc" class="control-label"><i class="fas fa-align-left"></i> Mô Tả Ngắn</label>
                        <textarea asp-for="ShortDesc" class="form-control"></textarea>
                        <span asp-validation-for="ShortDesc" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"><i class="fas fa-align-left"></i> Mô Tả</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Price" class="control-label"><i class="fas fa-dollar-sign"></i> Giá Bán</label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Discount" class="control-label"><i class="fas fa-percent"></i> Giảm Giá (%)</label>
                            <input asp-for="Discount" class="form-control" type="number" step="1" min="0" max="100" />
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="CatId" class="control-label"><i class="fas fa-tags"></i> Loại Hàng</label>
                            <select asp-for="CatId" class="form-control" asp-items="ViewBag.CatId">
                                <option value="">-- Chọn Loại Hàng --</option>
                            </select>
                            <span asp-validation-for="CatId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="UnitsInStock" class="control-label"><i class="fas fa-box"></i> Số Lượng Trong Kho</label>
                            <input asp-for="UnitsInStock" class="form-control" />
                            <span asp-validation-for="UnitsInStock" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label"><i class="fas fa-image"></i> Hình Ảnh</label>
                        <input asp-for="Thumb" class="form-control-file" type="file" name="thumbUrl" />
                        <span asp-validation-for="Thumb" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Tags" class="control-label"><i class="fas fa-tags"></i> Thẻ</label>
                        <input asp-for="Tags" class="form-control" />
                        <span asp-validation-for="Tags" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label"><i class="fas fa-toggle-on"></i> Trạng Thái</label>
                        <div class="form-check">
                            <input asp-for="HomeFlag" class="form-check-input" type="checkbox" value="true" id="HomeFlag">
                            <label class="form-check-label" for="HomeFlag">Ghim Lên Đầu Trang</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="Active" class="form-check-input" type="checkbox" value="true" id="Active">
                            <label class="form-check-label" for="Active">Trưng Bày</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="BestSeller" class="form-check-input" type="checkbox" value="true" id="BestSeller">
                            <label class="form-check-label" for="BestSeller">Bán Chạy</label>
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> Tạo Sản Phẩm</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="mt-3 text-center">
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Trở Về Danh Sách</a>
        </div>
    </div>
</div>
