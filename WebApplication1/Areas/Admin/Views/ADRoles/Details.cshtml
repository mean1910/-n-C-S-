@model WebApplication1.Models.Role

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>Chi tiết quyền truy cập</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.RoleId)</dd>
                        <dt class="col-sm-3">Tên quyền:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.RoleName)</dd>
                    </dl>
                    <div class="text-right">
                        <a asp-action="Edit" asp-route-id="@Model.RoleId" class="btn btn-primary">Chính sửa</a>
                        <a asp-action="Index" class="btn btn-secondary">Trở về</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

